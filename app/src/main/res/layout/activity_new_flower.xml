<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9eeb9"
    android:orientation="vertical"
    tools:context=".NewFlowerActivity">


    <TextView
        android:id="@+id/new_flower_first"
        style="@style/TEXTVIEW_STYLE_BIGTITLE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="90dp"
        android:text="식물을 끝까지 키우셨군요!" />

    <LinearLayout
        android:id="@+id/new_flower_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/new_imageView"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/myflower_pungran_3" />

        <TextView
            android:id="@+id/final_nickname"
            style="@style/TEXTVIEW_STYLE_TITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="애칭맨" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/new_flower_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="35dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TEXTVIEW_STYLE_BIGTITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="onClick"
            android:text="다음 식물 키우러 가기" />


        <ImageView
            android:id="@+id/new_nextbtn"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:background="@drawable/round_next"
            android:onClick="onClick" />

    </LinearLayout>
</LinearLayout>