<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    tools:context=".GetFlowerActivity">

        <ImageView
            android:id="@+id/get_Image"
            android:layout_marginTop="80dp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/get_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            style="@style/TEXTVIEW_STYLE_TITLE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="새로운 화분의 이름을 정해주세요!" />

        <EditText
            android:id="@+id/get_nickname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:maxLength="8"
            android:singleLine="true" />

        <Button
            style="@style/TEXTVIEW_STYLE_SUB"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_buttn_myflower"
            android:onClick="onClick"
            android:text="결정"
            android:textColor="#ebfceb" />
    </LinearLayout>
</LinearLayout>